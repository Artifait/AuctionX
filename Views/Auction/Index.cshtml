@model IEnumerable<AucX.Domain.Entities.AuctionLot>
@{
    ViewData["Title"] = "Лоты аукциона";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Лоты аукциона</h2>

<div class="row">
    @foreach (var lot in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="@lot.GameItem.ImageUrl" class="card-img-top" alt="@lot.GameItem.Name" />
                <div class="card-body">
                    <h5 class="card-title">@lot.GameItem.Name</h5>
                    <p class="card-text">@lot.GameItem.Description</p>
                    <p>Текущая ставка: @lot.CurrentBid.ToString("C")</p>
                    <a asp-action="Details" asp-route-id="@lot.Id" class="btn btn-primary">Подробнее</a>
                </div>
            </div>
        </div>
    }
</div>
