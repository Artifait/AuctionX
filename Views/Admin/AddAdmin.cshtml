@{
    ViewData["Title"] = "Добавление администратора";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Добавление администратора</h3>
        </div>
        <div class="card-body">
            <form asp-action="AddAdmin" method="post">
                <div class="form-group">
                    <label for="email">Email пользователя</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Введите email пользователя" required />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Добавить</button>
                    <a class="btn btn-secondary" href="@Url.Action("AdminsList", "Admin")">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>
